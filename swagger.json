          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "GoogleUser": {
        "required": ["name", "_id", "email", "providerId"],
        "properties": {
          "_id": {
            "type": "integer",
            "uniqueItems": true
          },
          "isPublic": {
            "type": "boolean"
          },
          "name": {
            "type": "string"
          }
        }
      },
      "AuthUser": {
        "type": "object",
        "required": ["email", "password"],
        "properties": {
          "_id": {
            "type": "string",
            "description": "id of user",
            "example": "5e9f8f8f8f8f8f8f8f8f8f8"
          },
          "email": {
            "type": "string",
            "description": "email of user",
            "example": "anymail@hotmail.com",
            "format": "email"
          },
          "username": {
            "type": "string",
            "description": "username of user",
            "example": "anyusername",
            "format": "username"
          },
          "password": {
            "type": "string",
            "description": "password of user",
            "example": "$2a$10$2M5ORDSG.lXG10tb9v1qduh9gHQoPW3dM5fmuIZefgHFPPVST638m",
            "format": "password"
          },
          "createdAt": {
            "type": "string",
            "description": "created at of user",
            "example": "2020-01-01T00:00:00.000Z"
          },
          "updatedAt": {
            "type": "string",
            "description": "updated at of user",
            "example": "2020-01-01T00:00:00.000Z"
          }
        }
      },
      "ProfileUser": {
        "type": "object",
        "required": ["email", "password"],
        "properties": {
          "email": {
            "type": "string",
            "description": "email of user",
            "example": "johndogh@hotmail.com",
            "format": "email"
          },
          "username": {
            "type": "string",
            "description": "username of user",
            "example": "johny88",
            "format": "username"
          },
          "firstName": {
            "type": "string",
            "description": "first name of user",
            "example": "John",
            "format": "firstName"
          },
          "lastName": {
            "type": "string",
            "description": "last name of user",
            "example": "Dogh",
            "format": "lastName"
          },
          "location": {
            "type": "string",
            "description": "location of user",
            "example": "istanbul",
            "format": "location"
          },
          "phone": {
            "type": "string",
            "description": "phone of user",
            "example": "05446544533",
            "format": "phone"
          },
          "description": {
            "type": "string",
            "description": "description of user",
            "example": "this is one good volunteer",
            "format": "description"
          },
          "cv": {
            "type": "string",
            "description": "cv of user",
            "example": "cv.pdf",
            "format": "cv"
          }
        }
      },
      "Event": {
        "type": "object",
        "required": [
          "avatar",
          "description",
          "location",
          "launchDate",
          "topic"
        ],
        "properties": {
          "_id": {
            "type": "string",
            "uniqueItems": true
          },
          "avatar": {
            "type": "string"
          },
          "description": {
            "type": "string"
          },
          "location": {
            "type": "string"
          },
          "launchDate": {
            "type": "date"
          },
          "ngo": {
            "type": "ObjectId"
          },
          "pendingApplicants": {
            "type": "array",
            "items": {
              "type": "ObjectId"
            }
          },
          "approvedApplicants": {
            "type": "array",
            "items": {
              "type": "ObjectId"
            }
          },
          "declinedApplicants": {
            "type": "array",
            "items": {
              "type": "ObjectId"
            }
          },
          "topic": {
            "type": "string"
          }
        }
      },
      "NewEvent": {
        "type": "object",
        "required": [
          "avatar",
          "description",
          "location",
          "launchDate",
          "topic"
        ],
        "properties": {
          "avatar": {
            "type": "string",
            "example": "https://w7.pngwing.com/pngs/178/595/png-transparent-user-profile-computer-icons-login-user-avatars-thumbnail.png"
          },
          "description": {
            "type": "string",
            "example": "Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat. Duis aute irure dolor in reprehenderit in voluptate velit esse cillum dolore eu fugiat nulla pariatur. Excepteur sint occaecat cupidatat non proident, sunt in culpa qui officia deserunt mollit anim id est laborum."
          },
          "location": {
            "type": "string",
            "example": "Antalya"
          },
          "launchDate": {
            "type": "date",
            "example": "2022-12-28T21:00:00.000Z"
          },
          "topic": {
            "type": "string",
            "example": "Maths"
          }
        }
      },
      "Ngo": {
        "type": "object",
        "required": ["email"],
        "properties": {
          "_id": {
            "type": "string",
            "uniqueItems": true
          },
          "email": {
            "type": "string",
            "required": true,
            "unique": true
          },
          "password": {
            "type": "string"
          },
          "username": {
            "type": "string",
            "unique": true
          },
          "phone": {
            "type": "integer"
          },
          "provider": {
            "type": "string"
          },
          "providerId": {
            "type": "string"
          },
          "name": {
            "type": "string"
          },
          "website": {
            "type": "string"
          },
          "publishedEvents": [
            {
              "type": "array",
              "items": {
                "type": "ObjectId"
              }
            }
          ],
          "avatar": {
            "type": "string"
          }
        }
      },
      "Volunteer": {
        "type": "object",
        "required": ["email"],
        "properties": {
          "_id": {
            "type": "string",
            "uniqueItems": true
          },
          "email": {
            "type": "string",
            "required": true,
            "unique": true
          },
          "password": {
            "type": "string"
          },
          "username": {
            "type": "string",
            "unique": true
          },
          "phone": {
            "type": "integer"
          },
          "provider": {
            "type": "string"
          },
          "providerId": {
            "type": "string"
          },
          "appliedEvents": [
            {
              "type": "array",
              "items": {
                "type": "ObjectId"
              }
            }
          ],
          "firstName": {
            "type": "string"
          },
          "lastName": {
            "type": "string"
          },
          "location": {
            "type": "string"
          },
          "description": {
            "type": "string"
          },
          "cv": {
            "type": "string"
          },
          "areaOfExp": {
            "type": "array",
            "default": []
          }
        }
      },
      "Error": {
        "type": "object",
        "required": ["success", "error"],
        "properties": {
          "code": {
            "success": "boolean",
            "default": false
          },
          "error": {
            "type": "string"
          }
        }
      },
      "Success": {
        "type": "object",
        "required": ["success", "data"],
        "properties": {
          "code": {
            "success": "boolean",
            "default": false
          },
          "data": {
            "type": "string"
          }
        }
      },
      "SuccessEvent": {
        "type": "object",
        "required": ["success", "data"],
        "properties": {
          "code": {
            "success": "boolean",
            "default": true
          },
          "data": {
            "type": "object",
            "$ref": "#/components/schemas/Event"
          }
        }
      },
      "SuccessEvents": {
        "type": "object",
        "required": ["success", "data"],
        "properties": {
          "code": {
            "success": "boolean",
            "default": true
          },
          "data": {
            "type": "array",
            "$ref": "#/components/schemas/Event"
          }
        }
      },
      "SuccessGoogleUser": {
        "type": "object",
        "required": ["success", "data"],
        "properties": {
          "code": {
            "success": "boolean",
            "default": true
          },
          "data": {
            "type": "object",
            "$ref": "#/components/schemas/GoogleUser"
          }
        }
      },
      "SuccessAuth": {
        "type": "object",
        "required": ["success", "data"],
        "properties": {
          "code": {
            "success": "boolean",
            "default": true
          },
          "data": {
            "type": "object",
            "$ref": "#/components/schemas/AuthUser"
          }
        }
      },
      "SuccessProfile": {
        "type": "object",
        "required": ["success", "data"],
        "properties": {
          "code": {
            "success": "boolean",
            "default": true
          },
          "data": {
            "type": "object",
            "$ref": "#/components/schemas/ProfileUser"
          }
        }
      },
      "SuccessNgo": {
        "type": "object",
        "required": ["success", "data"],
        "properties": {
          "code": {
            "success": "boolean",
            "default": true
          },
          "data": {
            "type": "object",
            "$ref": "#/components/schemas/Ngo"
          }
