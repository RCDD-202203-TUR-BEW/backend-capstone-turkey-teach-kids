{
  "openapi": "3.0.0",
  "info": {
    "version": "1.0.0",
    "title": "Teach Kids API",
    "description": "connect ngos with teachers.",
    "license": {
      "name": "MIT",
      "url": "https://opensource.org/licenses/MIT"
    }
  },
  "host": "localhost:3000",
  "basePath": "/",
  "tags": [
    {
      "name": "Users",
      "description": "API for users in the system"
    }
  ],
  "schemes": ["http"],
  "consumes": ["application/json"],
  "produces": ["application/json"],
  "paths": {
    "/api/auth/google": {
      "get": {
        "tags": ["Google authentication"],
        "summary": "redirect the user to google OAuth consent page",
        "responses": {
          "200": {
            "description": "Redirect success",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Success"
                }
              }
            }
          }
        }
      }
    },
    "/api/auth/google/callback": {
      "get": {
        "tags": ["Google authentication"],
        "summary": "sets an authentication cookie that holds the user JWT",
        "responses": {
          "200": {
            "description": "Auth success",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/SuccessGoogleUser"
                }
              }
            }
          }
        }
      }
    },
    "/api/auth/me": {
      "get": {
        "tags": ["Google authentication"],
        "summary": "responds with a user object as specified in the user schema",
        "responses": {
          "200": {
            "description": "Auth success user",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/SuccessGoogleUser"
                }
              }
            }
          }
        }
      }
    },
    "/api/auth/logout": {
      "get": {
        "tags": ["Google authentication"],
        "summary": "clears the authentication cookie and log the user out",
        "responses": {
          "200": {
            "description": "Log out success",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Success"
                }
              }
            }
          }
        }
      }
    },
    "/api/auth/signup/{type}": {
      "post": {
        "tags": ["Users"],
        "description": "Signup a new user",
        "operationId": "signup",
        "parameters": [
          {
            "name": "type",
            "in": "path",
            "description": "type of user",
            "required": true,
            "schema": {
              "type": "string",
              "enum": ["volunteer", "ngo"]
            }
          }
        ],
        "requestBody": {
          "description": "User to add",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": [
                  "email",
                  "password",
                  "confirmPassword",
                  "username"
                ],
                "properties": {
                  "email": {
                    "type": "string",
                    "description": "email of user",
                    "example": "anymail@hotmail.com",
                    "format": "email"
                  },
                  "password": {
                    "type": "string",
                    "description": "password of user",
                    "example": "Aa123456",
                    "format": "password"
                  },
                  "confirmPassword": {
                    "type": "string",
                    "description": "confirm password of user",
                    "example": "Aa123456",
                    "format": "password"
                  },
                  "username": {
                    "type": "string",
                    "description": "username of user",
                    "example": "anyusername",
                    "format": "username"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Successful operation",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/SuccessAuth"
                }
              }
            }
          },
          "400": {
            "description": "Bad Request",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          },
          "default": {
            "description": "unexpected error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    },
    "/api/auth/login": {
      "post": {
        "tags": ["Users"],
        "description": "Login a user",
        "operationId": "login",
        "requestBody": {
          "description": "User to log in",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["email", "password"],
                "properties": {
                  "email": {
                    "type": "string",
                    "description": "email of user",
                    "example": "anymail@hotmail.com",
                    "format": "email"
                  },
                  "password": {
                    "type": "string",
                    "description": "password of user",
                    "example": "Aa123456",
                    "format": "password"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Successful operation",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/SuccessAuth"
                }
              }
            }
          },
          "400": {
            "description": "Bad Request",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          },
          "default": {
            "description": "unexpected error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    },
    "/api/profile": {
      "get": {
        "tags": ["Users"],
        "description": "Get profile of user",
        "operationId": "getProfile",
        "responses": {
          "200": {
            "description": "Successful operation",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/SuccessProfile"
                }
              }
            }
          },
          "default": {
            "description": "Unexpected error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      },
      "patch": {
        "tags": ["Users"],
        "description": "Update profile of user",
        "operationId": "updateProfile",
        "requestBody": {
          "description": "User to add",
          "required": true,
          "content": {
            "application/json": {
              "schema": "#/components/schemas/ProfileUser"
            }
          }
        },
        "responses": {
          "200": {
            "description": "Successful operation",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/SuccessProfile"
                }
              }
            }
          },
          "400": {
            "description": "Bad Request",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          },
          "default": {
            "description": "unexpected error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    },
    "/api/events": {
      "get": {
        "tags": ["Events"],
        "summary": "List all events",
        "operationId": "getEvents",
        "responses": {
          "200": {
            "description": "Get all events success response",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/SuccessEvents"
                }
              }
            }
          },
          "default": {
            "description": "Unexpected error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    },
    "/api/events/{id}": {
      "get": {
        "tags": ["Events"],
        "description": "Retrieve single event item based on the id",
        "operationId": "getEvent",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "ID of event to fetch",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Single event success response",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Success"
                }
              }
            }
          },
          "404": {
            "description": "No event can be found",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          },
          "default": {
            "description": "unexpected error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    },
    "/api/events/{id}/related-events": {
      "get": {
        "tags": ["Events"],
        "summary": "Retrieve all the related events",
        "operationId": "getRelatedEvents",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "ID of event to fetch",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Get related events",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/SuccessEvents"
                }
              }
            }
          },
          "404": {
            "description": "No event can be found",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          },
          "default": {
            "description": "unexpected error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    },
    "/api/ngos": {
      "get": {
        "tags": ["NGOs"],
        "summary": "List all NGOs",
        "operationId": "getNGOs",
        "responses": {
          "200": {
            "description": "Get all NGOs success response",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/SuccessNgos"
                }
              }
            }
          },
          "default": {
            "description": "Unexpected error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    },
    "/api/ngos/{id}": {
      "get": {
        "tags": ["Users", "NGOs"],
        "description": "Retrieve single NGO item based on the id",
        "operationId": "get NGO",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "ID of NGO to fetch",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Single NGO success response",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/SuccessNgo"
                }
              }
            }
          },
          "404": {
            "description": "No NGO can be found",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          },
          "default": {
            "description": "unexpected error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    },
    "/api/volunteers/{id}": {
      "get": {
        "tags": ["Users", "Volunteers"],
        "description": "Retrieve single Volunteer item based on the id",
        "operationId": "get volunteer",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "ID of Volunteer to fetch",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Single Volunteer success response",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/SuccessVolunteer"
                }
              }
            }
          },
          "404": {
            "description": "No NGO can be found",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          },
          "default": {
            "description": "unexpected error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    },
    "/api/volunteers/{id}/applied-events": {
      "get": {
        "tags": ["Events", "Volunteers"],
        "summary": "Retrieve all the applied events of the related volunteer",
        "operationId": "getAppliedEvents",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "ID of volunteer to fetch",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Get applied events",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/SuccessAppliedEvents"
                }
              }
            }
